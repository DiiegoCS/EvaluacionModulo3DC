<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.actividades.ConsultaRegistroEquipo"
    android:orientation="vertical"
    android:background="@drawable/fondo3colores"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/txtTitulo2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Registro de Equipo Ingresado"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/teal_700"
                android:textAlignment="center"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/txtFecha3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="Fecha de Ingreso"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/txtCodigoIngreso3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="Condigo Ingreso"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"/>
            <TextView
                android:id="@+id/txtNombre3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
